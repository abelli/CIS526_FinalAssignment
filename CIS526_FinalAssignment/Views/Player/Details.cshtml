@using System.Web.Optimization
@model CIS526_FinalAssignment.Models.Player

@{
    ViewBag.Title = "Details";
}

<fieldset>
    <legend>@Html.DisplayFor(model => model.username)</legend>

    <div class="display-label">
         @Html.Raw("Total Score")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.totalScore)
    </div>

    <div class="display-label">
         @Html.Raw("Frozen")
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.isFrozen)
    </div>
    <div class="display-label">
        @Html.Partial("PlayerTaskPartial", Model)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section Scripts {
    @Scripts.Render("~/bundles/Player")
}
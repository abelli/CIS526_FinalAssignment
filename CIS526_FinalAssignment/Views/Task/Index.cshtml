@model IEnumerable<CIS526_FinalAssignment.Models.Task>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.Raw("Task Name")
        </th>
        <th>
            @Html.Raw("Description")
        </th>
        <th>
            @Html.Raw("Point Total")
        </th>
        <th>
            @Html.Raw("Path")
        </th>
        <th>
            @Html.Raw("Start Date")
        </th>
        <th>
            @Html.Raw("End Date")
        </th>
        <th>
            @Html.Raw("Milestone?")
        </th>
        <th>
            @Html.Raw("Milestone Bonus")
        </th>
        <th>
             @Html.Raw("Solution")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.taskName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pointTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pathName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.startDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.endDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isMilestone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.milestoneBonus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.solution)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
